<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/act4heartbg">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar2"
        android:background="@android:color/black"
        android:titleTextColor="@android:color/white">

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".StartMenu">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_edit_text"
            android:layout_alignParentTop="true"
            android:hint="Sök"
            android:textColorHint="@android:color/darker_gray"
            android:background="#ffffff"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:textSize="30dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:singleLine="true"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Guidad rundtur"
            android:id="@+id/btn_guide"
            android:background="@drawable/standard_button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="134dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Vad är hjärtinfarkt?"
            android:id="@+id/btn_heart_failure_info"
            android:background="@drawable/standard_button"
            android:layout_below="@+id/btn_guide"
            android:layout_alignLeft="@+id/btn_guide"
            android:layout_alignStart="@+id/btn_guide"
            android:layout_marginTop="71dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Varför denna app?"
            android:id="@+id/btn_app_info"
            android:background="@drawable/standard_button"
            android:layout_below="@+id/btn_heart_failure_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp" />



    </RelativeLayout>
</LinearLayout>

