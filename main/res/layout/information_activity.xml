<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/act4heartbg">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar2"
        android:background="@android:color/transparent"
        android:titleTextColor="@android:color/white">

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".StartMenuActivity">

        <!-- denna sysns inte i nuläget
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_edit_text"
            android:hint="Sök"
            android:textColorHint="@android:color/darker_gray"
            android:background="#ffffff"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:textSize="30dip"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:visibility="invisible"/> -->

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Guidad rundtur"
            android:id="@+id/btn_about_app"
            android:background="@drawable/standard_button"
            android:layout_marginTop="134dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Om hjärtinfarkt"
            android:id="@+id/btn_about_heart_failure"
            android:background="@drawable/standard_button"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/btn_about_app"
            android:layout_alignLeft="@+id/btn_about_app"
            android:layout_alignStart="@+id/btn_about_app" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Historik"
            android:id="@+id/btn_history"
            android:background="@drawable/standard_button"
            android:layout_below="@+id/btn_about_heart_failure"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp" />


    </RelativeLayout>
</LinearLayout>

