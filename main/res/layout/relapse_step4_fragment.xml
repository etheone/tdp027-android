<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Relapseprocess.RelapseStep4Fragment">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="10dp"
        android:text="Välj en knapp när den blå klockan blir 00:00"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="20dp"
        android:id="@+id/clock_container_step4"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"></LinearLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/redClockContainer"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/redClockText"></RelativeLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="Mitt tillstånd har förvärrats"
        android:id="@+id/stillHurting"
        android:layout_gravity="right|center_vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/standard_button"
        android:layout_above="@id/redClockContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textAllCaps="false"
        android:textSize="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total tid sedan situationen började"
        android:id="@+id/redClockText"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff" />


    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="Jag känner inga besvär"
        android:id="@+id/notHurtingButton"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/standard_button"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:alpha="0.25"
        android:layout_below="@+id/clock_container_step4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textSize="20dp"/>



</RelativeLayout>
