<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StartMenu"
    android:background="#ffffff">


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="AKUT Situation"
        android:id="@+id/btn_akut"
        android:background="@drawable/standard_button"
        android:layout_above="@+id/btn_info"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Information"
        android:id="@+id/btn_info"
        android:background="@drawable/standard_button"
        android:layout_above="@+id/btn_game"
        android:layout_alignLeft="@+id/btn_game"
        android:layout_alignStart="@+id/btn_game"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Spel"
        android:id="@+id/btn_game"
        android:background="@drawable/standard_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:src="@drawable/act4heart"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="60dp"
        />

</RelativeLayout>
