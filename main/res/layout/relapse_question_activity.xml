<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".EmergencyQuestions.RelapseQuestionActivity"
    android:background="@drawable/act4heartbg"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar2"
        android:background="@android:color/black"
        android:titleTextColor="@android:color/white">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".EmergencySituationActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Har du drabbats av hjÃ¤rtinfarkt tidigare?"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="23dp" />



        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Ja"
            android:id="@+id/btn_relapse"
            android:background="@drawable/standard_button"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/btn_no_relapse"
            android:layout_alignStart="@+id/btn_no_relapse"
            android:layout_marginTop="120dp" />


        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Nej"
            android:id="@+id/btn_no_relapse"
            android:background="@drawable/standard_button"
            android:layout_below="@+id/btn_relapse"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

    </RelativeLayout>
</LinearLayout>

